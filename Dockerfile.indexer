FROM python:3.12-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

COPY requirements-indexer.txt /app/requirements-indexer.txt
RUN pip install --no-cache-dir -r /app/requirements-indexer.txt

COPY . /app

CMD ["python", "scripts/indexer.py", "run-loop", "--config", "indexer.config.json"]
